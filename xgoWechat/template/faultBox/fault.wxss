
/* 故障组件S */
.fault-box{
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .6);
}
.fault-tip{
    display: block;
    box-sizing: border-box;
    width: 650rpx;
    max-height: 500rpx;
    overflow-y: scroll;
    padding: 66rpx 43rpx;
    margin: auto;
    margin-top: 300rpx;
    background-color: white;
    border: 0;
}

.fault-tip1{
    display: block;
    box-sizing: border-box;
    width: 650rpx;
    padding: 40rpx 43rpx;
    margin: auto;
    background-color: white;
    border: 0;
}
.fault-btn{
    line-height: 77rpx;
    height: 77rpx;
    font-size: 25.74rpx;
    margin-bottom: 16.38rpx;
    border-radius: 5rpx;
    text-align: center;
    border: 1rpx solid  rgb(135, 136, 136);
}
.fault-btn-item{
    background-color: rgb(41, 146, 227);
    color: white;
    border: 1rpx solid  rgb(41, 146, 227);
}
.fault-btn-sty{
    box-sizing: border-box;
    height: 88.92rpx;
    line-height: 88.92rpx;
    display: inline-block;
    width: 269.1rpx;
    border: 1rpx solid  rgb(41, 146, 227);
    color:  rgb(41, 146, 227);
}
.fault-btn-sty1{
    box-sizing: border-box;
    display: inline-block;
    height: 88.92rpx;
    line-height: 88.92rpx;
    width: 269.1rpx;
    color: white;
    background-color:  rgb(41, 146, 227);
    margin-left: 23.4rpx;
}

