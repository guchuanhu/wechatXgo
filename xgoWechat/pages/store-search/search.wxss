
.head{
    background-color: white;
    padding: 16.38rpx 38.61rpx 10.38rpx 74.88rpx;
    margin-bottom: 11.7rpx;
}
.border{
    border-right: 1rpx solid rgb(0, 130, 224);
    border-left: 1rpx solid rgb(0, 130, 224);
}
.line{
    width: 100%;
    height: 11.7rpx;
    margin: 0 -23.4rpx;
    padding: 0 23.4rpx;
    background-color: rgb(245, 245, 249);
}
.location{
    float: right;
    color: rgb(136, 136, 136);
    margin-right: 30rpx;
}
.location::after{
    content: ">";
    display: inline-block;
    position: relative;
    top: -3rpx;
    margin-left: 6rpx;
    transform:scale(1,1.5);
    color: rgb(136, 136, 136);
}
.position{
    position: relative;
}
.position .text1{
    margin-top: 20rpx;
    padding-left: 52.65rpx;
    font-size: 25.74rpx;
}
.position .text2{
    margin-top: 20rpx;
    padding-left: 52.65rpx;
    font-size: 20.74rpx;
}
.posi-box{
    margin: 30rpx -23.4rpx 0 -23.4rpx;
    white-space: nowrap;
    text-align: center;
    border-top: 1rpx solid #aaa;
}
.posi-left{
    position: relative;
    box-sizing: border-box;
    display: inline-block;
    width: 50%;
    padding: 25rpx 0;
    border-right: 1rpx solid #aaa;
    font-size: 25.74rpx;
}
.posi-left-img{
    display:inline-block;
    width:40rpx;
    height:30rpx;
    position:relative;
    top:8rpx;
}
.posi-right{
    display: inline-block;
    width: 50%;
    padding: 25rpx 0;
    font-size: 25.74rpx;
}
.map{
    width: 100%!important;
    height: 600rpx!important;
}
.text_apology{
    padding: 25rpx 55rpx;
    font-size: 25.74rpx;
    line-height: 40rpx;
}
.color_apology{
    color: rgb(136, 136, 136);
}